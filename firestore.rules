rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection - users can read/write their own data, admins can read/write all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && isAdmin();
    }
    
    // Active Emergencies collection - users can read/write their own emergency, admins can read all
    match /activeEmergencies/{odcId} {
      allow read: if request.auth != null && (request.auth.uid == odcId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == odcId || isAdmin());
    }
    
    // Responders collection - responders can read/write their own data, admins can read/write all
    match /responders/{responderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == responderId || isAdmin());
      allow create: if request.auth != null && isAdmin();
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Users can read conversations they're part of, responders can read assigned conversations
      allow read: if request.auth != null && (
        conversationId.matches(request.auth.uid + '_.*') ||
        resource.data.participantId == request.auth.uid ||
        resource.data.responderId == request.auth.uid
      );
      
      // Users can create conversations
      allow create: if request.auth != null && 
        conversationId.matches(request.auth.uid + '_.*') &&
        request.resource.data.participantId == request.auth.uid;
      
      // Both participants and responders can update
      allow update: if request.auth != null && (
        conversationId.matches(request.auth.uid + '_.*') ||
        resource.data.responderId == request.auth.uid
      );
      
      // Messages subcollection - participants and responders can read/write
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          conversationId.matches(request.auth.uid + '_.*') ||
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.responderId == request.auth.uid
        );
      }
    }
  }
}
