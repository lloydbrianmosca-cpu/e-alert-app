rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin (with null safety)
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is a responder
    function isResponder() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/responders/$(request.auth.uid));
    }
    
    // Users collection - users can read/write their own data, admins can read/write all
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Active Emergencies collection
    match /activeEmergencies/{emergencyId} {
      // Allow read for any authenticated user
      allow read: if request.auth != null;
      // Allow create for authenticated users where the emergencyId matches their uid
      allow create: if request.auth != null && request.auth.uid == emergencyId;
      // Allow update for any authenticated user (needed for real-time distance updates and responder assignment)
      allow update: if request.auth != null;
      // Allow delete for the owner, assigned responder, or admin
      allow delete: if request.auth != null && (
        request.auth.uid == emergencyId || 
        resource.data.assignedResponderId == request.auth.uid ||
        isAdmin() ||
        isResponder()
      );
    }
    
    // Emergency History collection
    match /emergencyHistory/{historyId} {
      // Allow read for admins, responders (their own completed), and users (their own emergencies)
      allow read: if request.auth != null && (
        isAdmin() || 
        isResponder() ||
        resource.data.userId == request.auth.uid
      );
      // Allow create for responders completing emergencies
      allow create: if request.auth != null && (isResponder() || isAdmin());
      // Allow update/delete only for admins
      allow update, delete: if request.auth != null && isAdmin();
    }
    
    // Responders collection
    match /responders/{responderId} {
      allow read: if request.auth != null;
      // Allow responders to update their own data, admins to update any, 
      // and users to update responder status during emergency assignment
      allow write: if request.auth != null;
      allow create: if request.auth != null && (request.auth.uid == responderId || isAdmin());
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Allow read if user is a participant, responder, or admin
      allow read: if request.auth != null;
      
      // Allow create if user is authenticated and is the participant in the new conversation
      allow create: if request.auth != null && (
        request.resource.data.participantId == request.auth.uid ||
        request.resource.data.responderId == request.auth.uid ||
        isAdmin()
      );
      
      // Allow update if user is a participant or responder in the conversation
      allow update: if request.auth != null && (
        resource.data.participantId == request.auth.uid ||
        resource.data.responderId == request.auth.uid ||
        isAdmin() ||
        isResponder()
      );
      
      allow delete: if request.auth != null && isAdmin();
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read/write if user is part of the conversation
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null && (
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantId == request.auth.uid ||
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.responderId == request.auth.uid ||
          isAdmin() ||
          isResponder()
        );
      }
    }
  }
}
