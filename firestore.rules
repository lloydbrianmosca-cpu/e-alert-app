rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is a responder
    function isResponder() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/responders/$(request.auth.uid));
    }
    
    // Users collection - users can read/write their own data, admins can read/write all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && isAdmin();
    }
    
    // Active Emergencies collection
    match /activeEmergencies/{emergencyId} {
      // Allow read for:
      // - The user who created the emergency (emergencyId == their uid)
      // - Admins
      // - Responders (they need to query for assignments)
      allow read: if request.auth != null && (
        request.auth.uid == emergencyId || 
        isAdmin() || 
        isResponder()
      );
      // Allow write for:
      // - The user who created the emergency
      // - Admins
      // - The assigned responder
      allow write: if request.auth != null && (
        request.auth.uid == emergencyId || 
        isAdmin() ||
        (isResponder() && resource.data.assignedResponderId == request.auth.uid)
      );
      allow create: if request.auth != null;
    }
    
    // Emergency History collection
    match /emergencyHistory/{historyId} {
      allow read: if request.auth != null && (isAdmin() || isResponder());
      allow write: if request.auth != null && isAdmin();
      allow create: if request.auth != null;
    }
    
    // Responders collection
    match /responders/{responderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == responderId || isAdmin());
      allow create: if request.auth != null && (request.auth.uid == responderId || isAdmin());
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Allow get (single doc read) if user is a participant or admin
      allow get: if request.auth != null && (
        resource.data.participantId == request.auth.uid ||
        resource.data.responderId == request.auth.uid ||
        isAdmin() ||
        isResponder()
      );
      
      // Allow list (queries) for authenticated users - security enforced via query constraints
      // Users query with participantId == auth.uid, Responders query with responderId == auth.uid
      allow list: if request.auth != null;
      
      allow create: if request.auth != null;
      
      allow update: if request.auth != null && (
        resource.data.participantId == request.auth.uid ||
        resource.data.responderId == request.auth.uid ||
        isAdmin() ||
        isResponder()
      );
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantId == request.auth.uid ||
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.responderId == request.auth.uid ||
          isAdmin() ||
          isResponder()
        );
      }
    }
  }
}
