rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Active Emergencies collection - users can read/write their own emergency
    match /activeEmergencies/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Responders collection - responders can read/write their own data
    match /responders/{responderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == responderId;
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Users can read conversations they're part of, responders can read assigned conversations
      allow read: if request.auth != null && (
        conversationId.matches(request.auth.uid + '_.*') ||
        resource.data.participantId == request.auth.uid ||
        resource.data.responderId == request.auth.uid
      );
      
      // Users can create conversations
      allow create: if request.auth != null && 
        conversationId.matches(request.auth.uid + '_.*') &&
        request.resource.data.participantId == request.auth.uid;
      
      // Both participants and responders can update
      allow update: if request.auth != null && (
        conversationId.matches(request.auth.uid + '_.*') ||
        resource.data.responderId == request.auth.uid
      );
      
      // Messages subcollection - participants and responders can read/write
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          conversationId.matches(request.auth.uid + '_.*') ||
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.responderId == request.auth.uid
        );
      }
    }
  }
}
